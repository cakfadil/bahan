    setTimeout("hide('cakfadil')", 3000);
}
var timer1 = setTimeout("hide('cakfadil')", 3000);
clearTimeout(timer1);
var timer1 = setInterval("updateClock()", 1000);
clearInterval(timer1);
</script>
